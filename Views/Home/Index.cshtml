<!DOCTYPE html>
<html lang="en">
<head>
    <title>Time Table Generator</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center">Time Table Generator</h2>
        <form id="mainForm" action="/Home/GenerateHours" method="post">
            <div class="mb-3">
                <label class="form-label">Number of Working Days (1 to 7):</label>
                <input type="number" id="workingDays" name="WorkingDays" class="form-control" min="1" max="7" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Number of Subjects per Day (1 to 8):</label>
                <input type="number" id="subjectsPerDay" name="SubjectsPerDay" class="form-control" min="1" max="8" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Total Subjects:</label>
                <input type="number" id="totalSubjects" name="TotalSubjects" class="form-control" min="1" required>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Total Hours for Week:</label>
                <input type="text" id="totalHours" class="form-control" readonly>
            </div>

            <div class="d-grid">
                <button type="submit" id="submitBtn" class="btn btn-primary btn-lg" disabled>Proceed</button>
            </div>
        </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        function calculateTotalHours() {
            var workingDays = parseInt($("#workingDays").val()) || 0;
            var subjectsPerDay = parseInt($("#subjectsPerDay").val()) || 0;
            var totalHours = workingDays * subjectsPerDay;
            $("#totalHours").val(totalHours);
            $("#submitBtn").prop('disabled', totalHours === 0);
        }

        $("#workingDays, #subjectsPerDay").on("input", calculateTotalHours);
    });
</script>
</body>
</html>
